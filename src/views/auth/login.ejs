<%- layout('layouts/main') %>
<div class="form-container">
  <!-- Form Title -->
  <div class="text-center mb-8">
    <h1 class="text-3xl font-bold text-white mb-2">Sign In</h1>
    <p class="text-slate-300">
      Don't have an account?
      <a href="/auth/register" class="text-lime-400 font-medium hover:text-lime-300">Create Account</a>
    </p>
    <% if (error) { %>
      <p class="text-red-500 mt-4"><%= error %></p>
    <% } %>
  </div>

  <!-- Login Form -->
  <div class="form-section p-8">
    <form id="loginForm" action="/auth/login" method="POST">
      <!-- Email -->
      <div class="mb-6">
        <label for="email" class="form-label required">Email</label>
        <input type="email" id="email" name="email" class="form-input" placeholder="Enter your email address" required>
      </div>

      <!-- Password -->
      <div class="mb-6">
        <label for="password" class="form-label required">Password</label>
        <input type="password" id="password" name="password" class="form-input" placeholder="Enter your password" required>
      </div>

      <!-- Submit Button -->
      <div class="text-center">
        <button type="submit" class="btn-primary w-full md:w-auto px-8">Sign In</button>
      </div>
    </form>
  </div>
</div>