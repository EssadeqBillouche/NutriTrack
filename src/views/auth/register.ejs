<%- layout('layouts/main') %>
<div class="form-container">
  <!-- Form Title -->
  <div class="text-center mb-8">
    <h1 class="text-3xl font-bold text-white mb-2">Create Account</h1>
    <p class="text-slate-300">
      Already have an account?
      <a href="/auth/login" class="text-lime-400 font-medium hover:text-lime-300">Sign in</a>
    </p>
    <% if (error) { %>
      <p class="text-red-500 mt-4"><%= error %></p>
    <% } %>
  </div>

  <!-- Registration Form -->
  <div class="form-section p-8">
    <form id="registrationForm" action="/auth/register" method="POST">
      <!-- General Information Section -->
      <div class="grid md:grid-cols-2 gap-6 mb-6">
        <div>
          <label for="first_name" class="form-label required">First Name</label>
          <input type="text" id="first_name" name="first_name" class="form-input" placeholder="Enter your first name" required>
        </div>
        <div>
          <label for="last_name" class="form-label required">Last Name</label>
          <input type="text" id="last_name" name="last_name" class="form-input" placeholder="Enter your last name" required>
        </div>
      </div>

      <!-- Email -->
      <div class="mb-6">
        <label for="email" class="form-label required">Email</label>
        <input type="email" id="email" name="email" class="form-input" placeholder="Enter your email address" required>
      </div>

      <!-- Passwords -->
      <div class="grid md:grid-cols-2 gap-6 mb-6">
        <div>
          <label for="password" class="form-label required">Password</label>
          <input type="password" id="password" name="password" class="form-input" placeholder="Create a password" required>
        </div>
        <div>
          <label for="confirmPassword" class="form-label required">Confirm Password</label>
          <input type="password" id="confirmPassword" name="confirmPassword" class="form-input" placeholder="Confirm your password" required>
        </div>
      </div>

      <!-- Personal Details Section -->
      <div class="grid md:grid-cols-2 gap-6 mb-6">
        <div>
          <label for="age" class="form-label required">Age</label>
          <input type="number" id="age" name="age" class="form-input" placeholder="Your age" min="13" max="90" required>
        </div>
        <div>
          <label for="gender" class="form-label required">Gender</label>
          <select id="gender" name="gender" class="form-input" required>
            <option value="" disabled selected>Select your gender</option>
            <option value="male">Male</option>
            <option value="female">Female</option>
          </select>
        </div>
      </div>

      <!-- Physical Stats Section -->
      <div class="grid md:grid-cols-2 gap-6 mb-6">
        <div>
          <label for="height" class="form-label required">Height (cm)</label>
          <input type="number" id="height" name="height" class="form-input" placeholder="Your height in cm" min="100" max="250" required>
        </div>
        <div>
          <label for="weight" class="form-label required">Weight (kg)</label>
          <input type="number" id="weight" name="weight" class="form-input" placeholder="Your weight in kg" min="30" max="150" required>
        </div>
      </div>

      <!-- Activity Level -->
      <div class="mb-6">
        <label for="activityLevel" class="form-label required">Activity Level</label>
        <select id="activityLevel" name="activityLevel" class="form-input" required>
          <option value="" disabled selected>Select your activity level</option>
          <option value="sedentary">Sedentary (little to no exercise)</option>
          <option value="lightly-active">Lightly Active (light exercise 1-3 days/week)</option>
          <option value="moderately-active">Moderately Active (moderate exercise 3-5 days/week)</option>
          <option value="very-active">Very Active (hard exercise 6-7 days/week)</option>
          <option value="extremely-active">Extremely Active (very hard exercise, physical job)</option>
        </select>
      </div>

      <!-- Goals -->
      <div class="mb-6">
        <label for="goals" class="form-label required">Goals</label>
        <select id="goals" name="goals" class="form-input" required>
          <option value="" disabled selected>Select your primary goal</option>
          <option value="lose-weight">Lose Weight</option>
          <option value="maintain-weight">Maintain Weight</option>
          <option value="gain-weight">Gain Weight</option>
          <option value="build-muscle">Build Muscle</option>
          <option value="improve-health">Improve Overall Health</option>
        </select>
      </div>

      <!-- Daily Calorie Goal -->
      <div class="mb-8">
        <label for="calorieGoal" class="form-label required">Daily Calorie Goal</label>
        <input type="number" id="calorieGoal" name="calorieGoal" class="form-input" placeholder="Your daily calorie target" min="1000" max="5000" required>
        <p class="text-sm text-slate-400 mt-2">Based on your stats, we recommend approximately 2,200 calories per day</p>
      </div>

      <!-- Submit Button -->
      <div class="text-center">
        <button type="submit" class="btn-primary w-full md:w-auto px-8">Create Account</button>
      </div>
    </form>
  </div>
</div>