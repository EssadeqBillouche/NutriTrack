<script>
// Profile form interactions
document.addEventListener('DOMContentLoaded', function() {
    // Add allergy/preference functionality
    const addButtons = document.querySelectorAll('button[class*="Ajouter"]');
    
    addButtons.forEach(button => {
        button.addEventListener('click', function() {
            const input = prompt('Ajouter un élément:');
            if (input && input.trim()) {
                const container = this.parentElement;
                const newTag = document.createElement('span');
                newTag.className = this.previousElementSibling.className;
                newTag.innerHTML = `<i class="fas fa-times mr-2 cursor-pointer"></i>${input.trim()}`;
                container.insertBefore(newTag, this);
                
                // Add remove functionality
                newTag.querySelector('i').addEventListener('click', function() {
                    newTag.remove();
                });
            }
        });
    });
    
    // Remove tag functionality
    document.querySelectorAll('span[class*="rounded-full"] i[class*="fa-times"]').forEach(icon => {
        icon.addEventListener('click', function() {
            this.parentElement.remove();
        });
    });
    
    // Form validation
    const inputs = document.querySelectorAll('input, select');
    inputs.forEach(input => {
        input.addEventListener('change', function() {
            if (this.value.trim()) {
                this.classList.remove('border-red-500');
                this.classList.add('border-lime-500');
            } else {
                this.classList.remove('border-lime-500');
                this.classList.add('border-red-500');
            }
        });
    });
});
</script>
