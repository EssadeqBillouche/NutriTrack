<%- include('layouts/head') %>
<body class="overflow-x-hidden bg-slate-900 text-white font-inter scroll-smooth">
    <!-- Dashboard Layout -->
    <div class="flex min-h-screen">
        <!-- Sidebar Navigation -->
        <%- include('layouts/side-bar', {currentPage: 'profile'}) %>
        
        <!-- Main Content -->
        <div class="flex-1 flex flex-col">
            <!-- Top Header -->
            <%- include('layouts/header', {pageTitle: 'Profil Utilisateur'}) %>
            
            <!-- Main Profile Content -->
            <main class="flex-1 p-6 overflow-y-auto">
                <% if (error) { %>
                    <div class="bg-red-500/20 border border-red-500 text-red-400 px-4 py-3 rounded-lg mb-6">
                        <i class="fas fa-exclamation-triangle mr-2"></i>
                        <%= error %>
                    </div>
                <% } %>

                <% if (user) { %>
                <!-- Header Actions -->
                <div class="flex items-center space-x-4 mb-6">
                    <button class="bg-lime-500 text-slate-900 px-4 py-2 rounded-lg font-semibold hover:bg-lime-400 flex items-center space-x-2">
                        <i class="fas fa-save"></i>
                        <span>Sauvegarder</span>
                    </button>
                    <button class="bg-slate-700 text-white px-4 py-2 rounded-lg font-semibold hover:bg-slate-600 flex items-center space-x-2">
                        <i class="fas fa-edit"></i>
                        <span>Modifier</span>
                    </button>
                </div>

<!-- Profile Overview -->
<div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-6">
    <!-- Profile Card -->
    <div class="lg:col-span-1">
        <div class="bg-slate-800 rounded-xl p-6 shadow-xl">
            <div class="text-center">
                <!-- Profile Picture -->
                <div class="relative inline-block mb-4">
                    <div class="w-24 h-24 bg-gradient-to-br from-lime-400 to-lime-600 rounded-full flex items-center justify-center mx-auto">
                        <span class="text-white font-bold text-2xl">JD</span>
                    </div>
                    <button class="absolute bottom-0 right-0 w-8 h-8 bg-lime-500 rounded-full flex items-center justify-center hover:bg-lime-400 transition-colors">
                        <i class="fas fa-camera text-white text-sm"></i>
                    </button>
                </div>
                
                <!-- User Info -->
                <h2 class="text-2xl font-bold mb-2"><%= user.first_name %> <%= user.last_name %></h2>
                <p class="text-slate-400 mb-4"><%= user.email %></p>
                <div class="flex items-center justify-center space-x-2 mb-4">
                    <span class="bg-lime-500/20 text-lime-400 px-3 py-1 rounded-full text-sm">
                        <%= profileTypeDisplay || 'Profil non défini' %>
                    </span>
                </div>
                
                <!-- Stats -->
                <div class="grid grid-cols-2 gap-4 text-center">
                    <div>
                        <div class="text-2xl font-bold text-lime-400">45</div>
                        <div class="text-sm text-slate-400">Repas analysés</div>
                    </div>
                    <div>
                        <div class="text-2xl font-bold text-blue-400">12</div>
                        <div class="text-sm text-slate-400">Semaines actives</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Personal Information -->
    <div class="lg:col-span-2">
        <div class="bg-slate-800 rounded-xl p-6 shadow-xl">
            <h3 class="text-xl font-bold mb-6">Informations Personnelles</h3>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Basic Info -->
                <div class="space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-slate-300 mb-2">Prénom</label>
                        <input type="text" value="<%= user.first_name || '' %>" class="w-full bg-slate-700 border border-slate-600 rounded-lg px-3 py-2 text-white focus:border-lime-500 focus:outline-none" readonly>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-slate-300 mb-2">Nom</label>
                        <input type="text" value="<%= user.last_name || '' %>" class="w-full bg-slate-700 border border-slate-600 rounded-lg px-3 py-2 text-white focus:border-lime-500 focus:outline-none" readonly>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-slate-300 mb-2">Email</label>
                        <input type="email" value="<%= user.email || '' %>" class="w-full bg-slate-700 border border-slate-600 rounded-lg px-3 py-2 text-white focus:border-lime-500 focus:outline-none" readonly>
                    </div>
                </div>
                
                <!-- Health Info -->
                <div class="space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-slate-300 mb-2">Date de naissance</label>
                        <input type="date" value="<%= user.date_of_birth || '' %>" class="w-full bg-slate-700 border border-slate-600 rounded-lg px-3 py-2 text-white focus:border-lime-500 focus:outline-none" readonly>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-slate-300 mb-2">Taille (cm)</label>
                        <input type="number" value="<%= user.height_cm || '' %>" class="w-full bg-slate-700 border border-slate-600 rounded-lg px-3 py-2 text-white focus:border-lime-500 focus:outline-none" readonly>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-slate-300 mb-2">Poids actuel (kg)</label>
                        <input type="number" value="<%= user.current_weight_kg || '' %>" class="w-full bg-slate-700 border border-slate-600 rounded-lg px-3 py-2 text-white focus:border-lime-500 focus:outline-none" readonly>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Health Goals & Preferences -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
    <!-- Health Goals -->
    <div class="bg-slate-800 rounded-xl p-6 shadow-xl">
        <h3 class="text-xl font-bold mb-6">Objectifs de Santé</h3>
        
        <div class="space-y-4">
            <div>
                <label class="block text-sm font-medium text-slate-300 mb-2">Type de Profil</label>
                <input type="text" value="<%= profileTypeDisplay || 'Non défini' %>" class="w-full bg-slate-700 border border-slate-600 rounded-lg px-3 py-2 text-white focus:border-lime-500 focus:outline-none" readonly>
            </div>
            
            <div>
                <label class="block text-sm font-medium text-slate-300 mb-2">Poids Cible (kg)</label>
                <input type="number" value="<%= user.target_weight_kg || '' %>" class="w-full bg-slate-700 border border-slate-600 rounded-lg px-3 py-2 text-white focus:border-lime-500 focus:outline-none" readonly>
            </div>
            
            <div>
                <label class="block text-sm font-medium text-slate-300 mb-2">Niveau d'Activité</label>
                <input type="text" value="<%= user.activity_level || 'Non défini' %>" class="w-full bg-slate-700 border border-slate-600 rounded-lg px-3 py-2 text-white focus:border-lime-500 focus:outline-none" readonly>
            </div>
        </div>
    </div>
    
    <!-- Dietary Preferences -->
    <div class="bg-slate-800 rounded-xl p-6 shadow-xl">
        <h3 class="text-xl font-bold mb-6">Préférences Alimentaires</h3>
        
        <div class="space-y-4">
            <div>
                <label class="block text-sm font-medium text-slate-300 mb-2">Discipline Sportive</label>
                <input type="text" value="<%= user.athlete_discipline || 'Non défini' %>" class="w-full bg-slate-700 border border-slate-600 rounded-lg px-3 py-2 text-white focus:border-lime-500 focus:outline-none" readonly>
            </div>
            
            <div>
                <label class="block text-sm font-medium text-slate-300 mb-2">Fréquence d'Entraînement</label>
                <input type="text" value="<%= user.training_frequency || 'Non défini' %>" class="w-full bg-slate-700 border border-slate-600 rounded-lg px-3 py-2 text-white focus:border-lime-500 focus:outline-none" readonly>
            </div>
            
            <div>
                <label class="block text-sm font-medium text-slate-300 mb-2">Conditions de Santé</label>
                <div class="flex flex-wrap gap-2">
                    <% if (user.has_diabetes) { %>
                        <span class="bg-red-500/20 text-red-400 px-3 py-1 rounded-full text-sm">
                            <i class="fas fa-exclamation-triangle mr-2"></i>
                            Diabète
                        </span>
                    <% } %>
                    <% if (user.has_hypertension) { %>
                        <span class="bg-orange-500/20 text-orange-400 px-3 py-1 rounded-full text-sm">
                            <i class="fas fa-heartbeat mr-2"></i>
                            Hypertension
                        </span>
                    <% } %>
                    <% if (user.has_obesity) { %>
                        <span class="bg-yellow-500/20 text-yellow-400 px-3 py-1 rounded-full text-sm">
                            <i class="fas fa-weight mr-2"></i>
                            Obésité
                        </span>
                    <% } %>
                    <% if (!user.has_diabetes && !user.has_hypertension && !user.has_obesity) { %>
                        <span class="bg-green-500/20 text-green-400 px-3 py-1 rounded-full text-sm">
                            <i class="fas fa-check mr-2"></i>
                            Aucune condition particulière
                        </span>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Health Metrics -->
<div class="bg-slate-800 rounded-xl p-6 shadow-xl mb-6">
    <h3 class="text-xl font-bold mb-6">Métriques de Santé</h3>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <!-- BMI -->
        <div class="text-center">
            <div class="w-20 h-20 bg-blue-500/20 rounded-full flex items-center justify-center mx-auto mb-3">
                <i class="fas fa-weight text-blue-500 text-xl"></i>
            </div>
            <div class="text-2xl font-bold text-blue-400"><%= bmi || 'N/A' %></div>
            <div class="text-sm text-slate-400">IMC</div>
            <div class="text-xs text-lime-400 mt-1"><%= bmiCategory || 'Non calculable' %></div>
        </div>
        
        <!-- Body Fat -->
        <div class="text-center">
            <div class="w-20 h-20 bg-green-500/20 rounded-full flex items-center justify-center mx-auto mb-3">
                <i class="fas fa-chart-pie text-green-500 text-xl"></i>
            </div>
            <div class="text-2xl font-bold text-green-400">15%</div>
            <div class="text-sm text-slate-400">Masse Grasse</div>
            <div class="text-xs text-lime-400 mt-1">Excellent</div>
        </div>
        
        <!-- Muscle Mass -->
        <div class="text-center">
            <div class="w-20 h-20 bg-orange-500/20 rounded-full flex items-center justify-center mx-auto mb-3">
                <i class="fas fa-dumbbell text-orange-500 text-xl"></i>
            </div>
            <div class="text-2xl font-bold text-orange-400">32kg</div>
            <div class="text-sm text-slate-400">Masse Musculaire</div>
            <div class="text-xs text-lime-400 mt-1">Bon</div>
        </div>
    </div>
</div>

<!-- Recent Activity -->
<div class="bg-slate-800 rounded-xl p-6 shadow-xl">
    <h3 class="text-xl font-bold mb-6">Activité Récente</h3>
    
    <div class="space-y-4">
        <div class="flex items-center space-x-4 p-3 bg-slate-700/50 rounded-lg">
            <div class="w-10 h-10 bg-lime-500/20 rounded-full flex items-center justify-center">
                <i class="fas fa-utensils text-lime-500"></i>
            </div>
            <div class="flex-1">
                <p class="font-medium">Repas analysé</p>
                <p class="text-sm text-slate-400">Salade de poulet grillé - 450 kcal</p>
            </div>
            <div class="text-sm text-slate-400">Il y a 2h</div>
        </div>
        
        <div class="flex items-center space-x-4 p-3 bg-slate-700/50 rounded-lg">
            <div class="w-10 h-10 bg-blue-500/20 rounded-full flex items-center justify-center">
                <i class="fas fa-chart-line text-blue-500"></i>
            </div>
            <div class="flex-1">
                <p class="font-medium">Objectif atteint</p>
                <p class="text-sm text-slate-400">Protéines quotidiennes - 110g</p>
            </div>
            <div class="text-sm text-slate-400">Hier</div>
        </div>
        
        <div class="flex items-center space-x-4 p-3 bg-slate-700/50 rounded-lg">
            <div class="w-10 h-10 bg-green-500/20 rounded-full flex items-center justify-center">
                <i class="fas fa-trophy text-green-500"></i>
            </div>
            <div class="flex-1">
                <p class="font-medium">Nouveau record</p>
                <p class="text-sm text-slate-400">7 jours consécutifs d'objectifs atteints</p>
            </div>
            <div class="text-sm text-slate-400">Il y a 3 jours</div>
        </div>
    </div>
</div>

                <% } else { %>
                    <div class="bg-slate-800 rounded-xl p-6 shadow-xl text-center">
                        <i class="fas fa-user-slash text-6xl text-slate-400 mb-4"></i>
                        <h3 class="text-xl font-bold mb-2">Profil non trouvé</h3>
                        <p class="text-slate-400">Aucune donnée de profil disponible pour cet utilisateur.</p>
                    </div>
                <% } %>
            </main>
        </div>
    </div>

    <%- include('layouts/scripts') %>
</body>
</html>
